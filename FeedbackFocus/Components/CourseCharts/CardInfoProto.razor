<div class="col-lg-3 col-6">
    <div class="@CssClass h-100">
        <div class="card-body pb-0 pt-3">
            <div class="row">
                <div class="col-8">
                    <h2 class="card-title">@Value</h2>
                    <p class="card-text">@Measure</p>
                </div>
                <div class="col-4 text-end">
                    <i class="@CssSymbol"></i>
                </div>
            </div>
        </div>
        <div class="card-footer bg-transparent border-top-0 pt-0 text-end">
            <a href="#" class="text-white stretched-link">More info <i class="oi oi-arrow-circle-right"></i></a>
        </div>
    </div>
</div>




@code {
    [Parameter]
    public string CssClass { get; set; }
    [Parameter]
    public string Value { get; set; }
    [Parameter]
    public string CssSymbol { get; set; }
    [Parameter]
    public string Measure { get; set; }
}
